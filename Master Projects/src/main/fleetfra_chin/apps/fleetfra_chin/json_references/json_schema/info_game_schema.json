{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "game_id": { "type": "string" },
    "player1": { "type": "string" },
    "player2": { "type": "string" },
    "created_at": { "type": "integer" },
    "game_over": { "type": "boolean" },
    "init_complete": { "type": "boolean" },
    "current_turn": { "type": "string" },
    "waiting_player": { "type": "string" },
    "winner": { "type": "string" },
    "battlefields": {
      "type": "object",
      "properties": {
        "{player1}": {
          "type": "array",
          "minItems": 100,
          "maxItems": 100,
          "items": {
            "type": "object",
            "required": ["row", "col", "value"],
            "properties": {
              "row": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9
              },
              "col": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9
              },
              "value": {
                "type": "integer",
                "enum": [0, 1, 2, 3, -1]
              }
            }
          }
        },
        "{player2}": {
          "type": "array",
          "minItems": 100,
          "maxItems": 100,
          "items": {
            "type": "object",
            "required": ["row", "col", "value"],
            "properties": {
              "row": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9
              },
              "col": {
                "type": "integer",
                "minimum": 0,
                "maximum": 9
              },
              "value": {
                "type": "integer",
                "enum": [0, 1, 2, 3, -1]
              }
            }
          }
        }
      }
    }
  },
  "required": ["game_id", "player1", "player2", "created_at" , "game_over" , "init_complete" , "current_turn" , "waiting_player" ,"type_request", "battlefields" , "winner"],
  "additionalProperties": false
}

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_letters_abc"
            style="?android:attr/buttonBarButtonStyle"
            android:text="ABC\nDEF\nGHI"
